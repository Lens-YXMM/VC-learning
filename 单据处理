#include <iostream>
#include <math.h>
#include <stdlib.h>
#include <string.h>
#include <fstream>

#define M(x) (int)((x)+0.5) //宏定义四舍五入函数

using namespace std;
int main()
{
    int sum = 0;  //总金额
    int money = 0;
    double d[5];
    bool sign = 1;
    int N,i;
    string date;
    ofstream file;
    
	cout<<"请输入本次要输入的数据数目"<<endl; 
    while(cin>>N)
    {
        if(N==0)
        {
            file.open("buffer.text");
            file <<"本次单据处理最终总金额为 "<<sum<<"(元)\n"<<endl;
            file.close();
            break;
        }
        
        cout<<"请输入 "<< N <<" 个数据."<<endl;
        
        for(i=0;i<N;i++)
        {
            cin>>d[i];
            money += M(d[i]); 
        }
        
        cout<<"本次总金额为"<< money <<"(元)"<<endl;
        sum += money;
        
        cout<<"是否与单据符合？（0/1）"<<endl;
        cin>>sign;
        if(sign!=1)
        {
            cout<<"请输入日期 date:";
            cin>>date;
            file.open("buffer.text");
            file <<"日期为 "<<date<<" 的单据金额错误，应为 "<<money<<"(元)\n"<<endl;
            file.close();
        }
       
	    cout<<"请输入本次要输入的数据数目"<<endl;
        money = 0;
    }
    cout<<"谢谢使用！"<<endl;
    
}
